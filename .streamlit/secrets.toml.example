# AuditOps Secrets Configuration
# Copy this file to .streamlit/secrets.toml and fill in your Supabase credentials
# NEVER commit secrets.toml to version control!

[supabase]
# Your Supabase project URL
# Find this in: Project Settings > API > Project URL
url = "https://your-project-id.supabase.co"

# Your Supabase anon/public key
# Find this in: Project Settings > API > Project API keys > anon public
anon_key = "your-anon-key-here"

# Your Supabase service role key (KEEP THIS SECRET!)
# Find this in: Project Settings > API > Project API keys > service_role secret
# Only use this for admin operations
service_role_key = "your-service-role-key-here"

# Optional: JWT secret for advanced token verification
# Find this in: Project Settings > API > JWT Secret
jwt_secret = "your-jwt-secret-here"

